
MASManager:
    canvas.before:
        Color:
            rgba: background_color
        Rectangle:
            size: self.size
            pos: self.pos
    Screen:
        name: "welcome_screen"
        MLabel:
            text: "Welcome"

    Screen:
        name: "simulation_screen"
        BoxLayout:
            orientation: "horizontal"
            ScrollView:
                SimulationArea:
                    size_hint_x: None
                    width: self.parent.width + dp(100)
            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                width: "100dp"
                Console:
                DashBoard:
                BreakButton:
                    text: "Simulate"
            

