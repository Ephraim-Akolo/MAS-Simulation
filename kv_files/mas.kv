
MASManager:
    canvas.before:
        Color:
            rgba: background_color
        Rectangle:
            size: self.size
            pos: self.pos
    Screen:
        name: "welcome_screen"
        MLabel:
            text: "Welcome"

    Screen:
        name: "simulation_screen"
