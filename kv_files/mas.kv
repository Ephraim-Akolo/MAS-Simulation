
MASManager:
    canvas.before:
        Color:
            rgba: light_background_color
        Rectangle:
            size: self.size
            pos: self.pos
    Screen:
        name: "welcome_screen"
        MLabel:
            text: "Welcome"

    Screen:
        name: "simulation_screen"
        BoxLayout:
            orientation: "horizontal"
            SimulationArea:
            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                width: "100dp"
                Console:
                DashBoard:
                BreakButton:
                    text: "Simulate"
            

<SimulationArea>:
    LineWidget:
    LineWidget:
        horizontal: False
        size_hint_x: None
        width: "10dp"
        size_hint_y: .4
        pos_hint: {"y": 0.5, "center_x": .3}
    LineWidget:
        horizontal: False
        size_hint_x: None
        width: "10dp"
        size_hint_y: .4
        pos_hint: {"top": 0.5, "center_x": .6}
    LineWidget:
        horizontal: False
        size_hint_x: None
        width: "10dp"
        size_hint_y: .4
        pos_hint: {"top": 0.5, "center_x": .9}
    SourceWidget:
        pos_hint: {"center_y": .5, "x": 0}
    
        
